{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-Wall",            // Abilita tutti i warning
        "-O",               // Abilita ottimizzazioni di base
        "-std=c11",         // Usa lo standard C11
        "-g",               // Include informazioni di debug
        "${file}",          // File sorgente
        "-o",               // Output
        "$output/{fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$g++"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}